<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SmallTextStyle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="MediumTextStyle" parent="SmallTextStyle">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="BoldNormalTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="BoldSmallTextStyle" parent="BoldNormalTextStyle">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="BoldBigTextStyle" parent="BoldNormalTextStyle">
        <item name="android:textSize">@dimen/text_size_bigger</item>
    </style>

    <style name="HeaderTextStyle" parent="BoldNormalTextStyle">
        <item name="android:textSize">@dimen/text_size_header</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:background">@drawable/background_rounded_green</item>
    </style>

    <style name="CollapsedToolbarTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ExpandedToolbarTextStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>